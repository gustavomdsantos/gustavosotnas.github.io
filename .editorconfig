# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.{js,coffee,py,rb,css,scss,less,html,jade,erb,json,yml,xml}]
charset = utf-8
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
insert_final_newline = false

[*.{scala,java}]
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false